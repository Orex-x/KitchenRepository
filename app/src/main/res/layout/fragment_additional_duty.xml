<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/islandtext"
    tools:context=".AdditionalDutyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/TVFragmentAdditionalDuty"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="16dp"
            android:text="Сколько дней добавить?"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BFragmentAdditionalDutyONE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_weight="1"
                android:text="1 день"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/BFragmentAdditionalDutyTHREE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:layout_weight="1"
                android:layout_marginTop="60dp"
                android:text="3 дня"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/BFragmentAdditionalDutyFIVE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:layout_marginTop="60dp"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_weight="1"
                android:text="5 дней"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BFragmentAdditionalDutyADD"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="80dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="добавить"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/BFragmentAdditionalDutyBack"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginRight="80dp"
                android:layout_marginTop="140dp"
                android:background="@drawable/empty_button"
                android:text="назад"
                android:textColor="@color/color_red" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>