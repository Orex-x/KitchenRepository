<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/TVHActivitySecundu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:background="@drawable/ic_logo"
                android:visibility="visible"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/BAHLogOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/red_button"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:onClick="logOutH"
                android:text="Выйти"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/TVHActivityReplaceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:gravity="center"
                android:text="Вы можете поменять имя:"
                android:textColor="@color/color_white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/BHActivityAddIdGroup" />





            <EditText
                android:id="@+id/ETHActivityGroupID"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:hint="ID"
                android:inputType="textPersonName"
                android:padding="12sp"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/color_Hint"
                android:textSize="22dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.521"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/GroupIsNull" />

            <TextView
                android:id="@+id/GroupIsNull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:text="Укажите ID группы что бы продолжить"
                android:textColor="@color/color_white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.542"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/BHActivityAddIdGroup"
                android:layout_width="122dp"
                android:layout_height="47dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/button"
                android:onClick="addIDGroupFromHActivity"
                android:text="Продолжить"
                android:textColor="@color/colorAccent"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ETHActivityGroupID" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Имя"
                android:ems="10"
                android:padding="12sp"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/color_Hint"
                android:background="@drawable/edit_text"
                android:inputType="textPersonName"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TVHActivityReplaceName" />

            <Button
                android:id="@+id/BHActivityReplaceName"
                android:layout_width="101dp"
                android:layout_height="47dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:onClick="replaceName"
                android:text="Поменять"
                android:textColor="@color/colorAccent"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

            <Button
                android:id="@+id/BHScheduleForPOD"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button"
                android:textColor="@color/colorAccent"
                android:onClick="GoToSchedule"
                android:text="Расписание"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/listGroupForPOD"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button"
                android:onClick="ShowGroupForPOD"
                android:text="Участники группы "
                android:textColor="@color/colorAccent"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/listGroupForWatcher"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button"
                android:onClick="ShowGroupForWatcher"
                android:text="Участники группы "
                android:textColor="@color/colorAccent"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



            <TextView
                android:id="@+id/TomorrowPOD"
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/islandtext"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="Загрузка..."
                android:textColor="@color/colorFewAccent"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/TodayPOD"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/TodayPOD"
                app:layout_constraintTop_toBottomOf="@+id/TodayPOD" />

            <TextView
                android:id="@+id/TodayPOD"
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/islandtext"
                android:gravity="center_horizontal"
                android:paddingTop="15dp"
                android:text="Загрузка..."
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/YesterdaayPOD"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/YesterdaayPOD"
                app:layout_constraintTop_toBottomOf="@+id/YesterdaayPOD" />

            <TextView
                android:id="@+id/YesterdaayPOD"
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_marginTop="92dp"
                android:text="Загрузка..."
                android:paddingTop="10dp"
                android:textSize="15dp"
                android:textColor="@color/colorFewAccent"
                android:textStyle="bold"
                android:background="@drawable/islandtext"
                android:gravity="center_horizontal"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/CallTodayPOD"
                android:layout_width="107dp"
                android:layout_height="46dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_call"
                android:textColor="@color/colorAccent"
                android:onClick="callTodayPOD"
                android:text="Позвонить"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/TodayPOD"
                app:layout_constraintStart_toStartOf="@+id/TodayPOD" />

            <Button
                android:id="@+id/CallTomorrowPOD"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="16dp"
                android:onClick="callTomorrowPOD"
                android:textColor="@color/colorAccent"
                android:background="@drawable/button_call"
                android:text="Позвонить"
                android:textSize="9dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/TomorrowPOD"
                app:layout_constraintStart_toStartOf="@+id/TomorrowPOD" />

            <Button
                android:id="@+id/CallYesterdaayPOD"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="16dp"
                android:onClick="callYesterdaayPOD"
                android:textColor="@color/colorAccent"
                android:background="@drawable/button_call"
                android:text="Позвонить"
                android:visibility="visible"
                android:textSize="9dp"
                app:layout_constraintBottom_toBottomOf="@+id/YesterdaayPOD"
                app:layout_constraintStart_toStartOf="@+id/YesterdaayPOD" />

            <TextView
                android:id="@+id/TVActHomeGlav"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/text"
                android:text="  Главная"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:gravity="fill_vertical"
                android:textColor="@color/color_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/BSettings"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_setting"
                android:onClick="goToSettings"
                android:text=""
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/BexitFromApp"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/BexitFromApp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text=""
                android:background="@drawable/ic_exit_the_app"
                android:onClick="exitTheApp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/TVActHomeGlav"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <fragment
                android:id="@+id/fragment_info_about_acceptWork"
                android:name="com.example.kitchentest.InfoAboutAcceptWork"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_gravity="bottom"
                android:visibility="gone" />


            <TextView
                android:id="@+id/TV_replace_day_p2"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:background="@drawable/islandtext" />

            <TextView
                android:id="@+id/TVAHReplacetext"
                android:layout_width="360dp"
                android:layout_height="42dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30sp"
                android:layout_marginBottom="300dp"
                android:gravity="center"
                android:visibility="gone"
                android:text="Выберите день который хотите поменять"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />

            <ListView
                android:id="@+id/LVAHReplaceDay"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="100dp"
                android:layout_gravity="bottom"
                android:background="@drawable/island_list"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/BAHNotReplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="40dp"
                android:onClick="AcceptReplaceIsFalse"
                android:background="@drawable/empty_button"
                android:textColor="@color/color_red"
                android:visibility="gone"
                android:layout_marginBottom="30dp"
                android:text="Нет" />

            <Button
                android:id="@+id/BAHReplace"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="130dp"
                android:layout_marginBottom="30dp"
                android:onClick="AcceptReplaceIsTrue"
                android:background="@drawable/button"
                android:text="Поменять"
                android:visibility="gone"
                android:textColor="@color/colorAccent" />


            <Button
                android:id="@+id/BHAcceptReplace"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="240sp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button"
                android:onClick="AcceptReplaceIsLearnMore"
                android:text="подробнее"
                android:textColor="@color/colorAccent"
                android:visibility="gone" />

            <Button
                android:id="@+id/BHNotAcceptReplace"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="170sp"
                android:layout_marginBottom="16dp"
                android:onClick="AcceptReplaceIsFalse"
                android:text="нет"
                android:background="@drawable/empty_button"
                android:textColor="@color/color_red"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TVaboutAcceptReplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10sp"
                android:layout_marginBottom="28dp"
                android:text="Вы хотите поменятся?"
                android:textSize="14sp"
                android:visibility="gone" />




            <TextView
                android:id="@+id/TVaboutAcceptWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10sp"
                android:layout_marginBottom="28dp"
                android:text="Вы принемаете дежурство?"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TVQestionReplace"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:background="@drawable/islandtext"
                android:textSize="12sp"
                android:visibility="gone" />

        </FrameLayout>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>