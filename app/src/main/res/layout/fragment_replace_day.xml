<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/islandtext"
    tools:context=".FragmentReplaceDay">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30sp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:text="Выберите день который хотите поменять" />

    <ListView
        android:id="@+id/LVFRD"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="200dp" />

    <Button
        android:id="@+id/BFRDReplace"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/button"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="250dp"
        android:layout_marginRight="50dp"
        android:text="поменять" />

    <Button
        android:id="@+id/BFRDNot"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:background="@drawable/empty_button"
        android:textColor="@color/color_red"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="250dp"
        android:text="нет" />
</FrameLayout>